# BirdDash Production Environment Configuration
# Copy these variables to your Railway environment variables

NODE_ENV=production
USE_ENHANCED_DB=true
DATABASE_TYPE=postgresql
ANALYTICS_ENABLED=true
PERFORMANCE_MONITORING=true
ERROR_TRACKING=true
ENABLE_SOCIAL_FEATURES=true
ENABLE_ACHIEVEMENTS=true
ENABLE_LEADERBOARD=true
ENABLE_TUTORIAL=true
ENABLE_ANALYTICS=true
ENABLE_PERFORMANCE_MONITORING=true
MAX_CONCURRENT_GAMES=10000
CACHE_TTL=600
BATCH_SIZE=20
MAX_MEMORY_MB=200
MAX_LOAD_TIME_MS=2000
LOG_LEVEL=warn
LOG_FORMAT=json
CORS_CREDENTIALS=true
HEALTH_CHECK_INTERVAL=30000
METRICS_COLLECTION_INTERVAL=60000
PERFORMANCE_ALERT_THRESHOLD=80
RAILWAY_ENVIRONMENT=production
